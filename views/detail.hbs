<div class="container">
  <section class="content-sp-hot">
    <h2>Chi tiết cà phê</h2>
    <div class="row">
      <div class="col-sm-3 item">
        <div class="card" style="width: 100%">
          <img src={{product.image}} width="100%" height="150px" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title">
              <p style="color:chocolate">{{product.name}}</p>
              </h5>
              <p class="text-detail" style="color:gray; font-style: italic ">Thành phần: {{product.contents}}</p>
              <p class="card-text">
                <span class="price text-danger">{{product.price}}đ</span>
                <span class="ori-price">{{product.old_price}}đ</span>
              </p>
              <div class="text-right">
                <a href="/san-pham/sua/{{product._id}}" class="btn btn-warning">Sửa</a>
                <a href="/san-pham/xoa/{{product._id}}" class="btn btn-danger">Xoá</a>
              </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
